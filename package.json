{
  "devDependencies": {
    "concurrently": "^9.1.2",
    "nodemon": "^3.1.9"
  },
  "scripts": {
    "start:server": "cd server && nodemon index.js",
    "start:client": "cd client && npm start",
    "postinstall": "npm install --prefix server && npm install --prefix client",
    "dev": "concurrently \"npm run start:server\" \"npm run start:client\""
  }
}
